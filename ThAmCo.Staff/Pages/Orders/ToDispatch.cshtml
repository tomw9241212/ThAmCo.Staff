@page
@model ThAmCo.Staff.Pages.Orders.ToDispatchModel
@{
}

<h3>Orders ready for dispatch</h3>

<table class="table">
    <thead>
        <tr>
            <th>Order Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Status</th>
            <th>Date Submitted</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.OrdersCustomers) {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.CustomerName</td>
                <td>@order.CustomerEmail</td>
                <td>@order.OrderStatus</td>
                <td>@order.SubmittedDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <form method="post" asp-page-handler="DispatchOrder" asp-route-orderId="@order.OrderId">
                        <button type="submit" class="btn btn-primary">Dispatch</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>